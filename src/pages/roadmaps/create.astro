---
import Layout from "@/layouts/Layout.astro";
import RoadmapCreationForm from "@/components/roadmap/RoadmapCreationForm";

export const prerender = false;
---

<Layout title="Utwórz Roadmapę - RoadYourMap">
  <div class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900">
    <div class="container mx-auto px-4 py-8">
      <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-lg p-6 shadow-xl">
        <div class="flex justify-between items-center mb-6">
          <div>
            <h1 class="text-3xl font-bold text-white">Utwórz Roadmapę</h1>
            <p class="text-blue-200">Stwórz spersonalizowany plan nauki z pomocą AI</p>
          </div>
          <div class="flex gap-4">
            <a
              href="/dashboard"
              class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors"
            >
              ← Dashboard
            </a>
            <button
              onclick="fetch('/api/auth/logout', {method: 'POST'}).then(() => window.location.href = '/')"
              class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors cursor-pointer"
            >
              Wyloguj się
            </button>
          </div>
        </div>

        <div class="max-w-3xl mx-auto">
          <RoadmapCreationForm client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>
