---
import Layout from "@/layouts/Layout.astro";
import { RoadmapDisplay } from "@/components/roadmap/RoadmapDisplay";
import type { RoadmapDetailsDto } from "@/types";

export const prerender = false;

// User is guaranteed to be present due to middleware protection
const { user, supabase } = Astro.locals;

if (!user) {
  return Astro.redirect("/auth/login");
}

// Fetch the latest roadmap generated by the user
const { data: latestRoadmap, error } = await supabase
  .from("roadmaps")
  .select(
    `
    *,
    items:roadmap_items(*)
  `
  )
  .eq("user_id", user.id)
  .order("created_at", { ascending: false })
  .limit(1)
  .single();

if (error) {
  // If we encounter an error or no roadmap exists, redirect to the create page
  return Astro.redirect("/roadmaps/create");
}

// Remove user_id from the response
// eslint-disable-next-line @typescript-eslint/no-unused-vars
const { user_id, ...roadmapData } = latestRoadmap;
---

<Layout title="Podgląd Roadmapy - RoadYourMap">
  <div class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900">
    <div class="container mx-auto px-4 py-8">
      <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-lg p-6 shadow-xl">
        <div class="flex justify-between items-center mb-6">
          <div>
            <h1 class="text-3xl font-bold text-white">Podgląd Roadmapy</h1>
            <p class="text-blue-200">Twoja najnowsza wygenerowana roadmapa nauki</p>
          </div>
          <div class="flex gap-4">
            <a
              href="/dashboard"
              class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors"
            >
              ← Dashboard
            </a>
            <a
              href="/roadmaps/create"
              class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors"
            >
              Nowa Roadmapa
            </a>
            <button
              onclick="fetch('/api/auth/logout', {method: 'POST'}).then(() => window.location.href = '/')"
              class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors"
            >
              Wyloguj się
            </button>
          </div>
        </div>

        <div class="text-white">
          {
            error ? (
              <div class="bg-yellow-900/20 border border-yellow-500/30 text-yellow-200 px-4 py-3 rounded-lg">
                <p class="mb-2">Nie znaleziono roadmap. Utwórz swoją pierwszą roadmapę.</p>
                <a href="/roadmaps/create" class="text-blue-300 hover:text-blue-200 underline">
                  Utwórz Roadmapę
                </a>
              </div>
            ) : (
              <RoadmapDisplay client:load roadmapData={roadmapData as RoadmapDetailsDto} />
            )
          }
        </div>
      </div>
    </div>
  </div>
</Layout>
